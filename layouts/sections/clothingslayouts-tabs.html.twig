{% if content %}
{% set idprefix %}tabs-{{ random(1000, 10000) }}{% endset %}
	<div {{attributes.addClass('clothings-tabs')}}>
		<ul class="nav nav-tabs" role="tablist">
			{% if content.button_tab_1|has_value %}
				<li class="nav-item" role="presentation">
					<a class="nav-link active" id="{{ idprefix }}home-tab" data-toggle="tab" href="#{{ idprefix }}home" role="tab" aria-controls="{{ idprefix }}home" aria-selected="true">
						<h4 {{region_attributes.button_tab_1.addClass('button_tab_1')}}>
							{{content.button_tab_1|layout_value}}
						</h4>
					</a>
				</li>
			{% endif %}
			{% if content.button_tab_2|has_value %}
				<li class="nav-item" role="presentation">
					<a class="nav-link" id="{{ idprefix }}profile-tab" data-toggle="tab" href="#{{ idprefix }}profile" role="tab" aria-controls="{{ idprefix }}profile" aria-selected="false">
						<h4 {{region_attributes.button_tab_2.addClass('button_tab_2')}}>
							{{content.button_tab_2|layout_value}}
						</h4>
					</a>
				</li>
			{% endif %}
			{% if content.button_tab_3|has_value %}
				<li class="nav-item" role="presentation">
					<a class="nav-link" id="{{ idprefix }}contact-tab" data-toggle="tab" href="#{{ idprefix }}contact" role="tab" aria-controls="{{ idprefix }}contact" aria-selected="false">
						<h4 {{region_attributes.button_tab_3.addClass('button_tab_3')}}>
							{{content.button_tab_3|layout_value}}
						</h4>
					</a>
				</li>
			{% endif %}
		</ul>
		<div class="tab-content">
			{% if content.content_tab_1|has_value %}
				<div class="tab-pane fade show active" id="{{ idprefix }}home" role="tabpanel" aria-labelledby="{{ idprefix }}home-tab">
					{{content.content_tab_1}}
				</div>
			{% endif %}
			{% if content.content_tab_2|has_value %}
				<div class="tab-pane fade" id="{{ idprefix }}profile" role="tabpanel" aria-labelledby="{{ idprefix }}profile-tab">
					{{content.content_tab_2}}
				</div>
			{% endif %}
			{% if content.content_tab_3|has_value %}
				<div class="tab-pane fade" id="{{ idprefix }}contact" role="tabpanel" aria-labelledby="{{ idprefix }}contact-tab">
					{{content.content_tab_3}}
				</div>
			{% endif %}
		</div>
	</div>
{% endif %}